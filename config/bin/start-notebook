NAME="notebook"
PORT="${1:-8888}"
IMAGE="${2:-jupyter/scipy-notebook}"

docker rm -f "${NAME}"
docker run -d  --name "${NAME}" -p ${PORT}:${PORT} \
     -v $(pwd):/work -w /work -e PYTHONPATH=/work  \
    ${IMAGE}                                       \
    start-notebook.sh                              \
    --NotebookApp.password='sha1:6b5606fc9f83:443065fb96233be987be5a3ea8d8543e787a6c92' \
    --port ${PORT}

echo "http://localhost:${PORT}"
echo "password: atpmein"
