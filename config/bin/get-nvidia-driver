if [ $# -lt 1 ]; then
    echo "Error! Please specify driver version"
    exit 1
fi

VERSION=$1
OUT=nvidia-${VERSION}.run

set -e

echo "# Downloading driver"
wget -q http://uk.download.nvidia.com/XFree86/Linux-x86_64/${VERSION}/NVIDIA-Linux-x86_64-$VERSION.run -O ${OUT}
chmod +x ${OUT}

echo "# To install your driver:"
echo "  sudo service lightdm stop"
echo "  sudo ./${OUT}"
