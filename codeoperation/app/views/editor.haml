!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", :"xml:lang" => "en", :lang => "en"}
  %head
    %title= file_name
    %link{:rel=>"stylesheet", :href=>"/codem/lib/codemirror.css"}
    %link{:rel=>"stylesheet", :href=>"/dark.css"}
    %link{:rel=>"stylesheet", :href=>"/editor.css"}
    %script{:src=>"/codem/lib/codemirror.js", :type=>"text/javascript"}
    %script{:src=>"/codem/mode/ruby/ruby.js", :type=>"text/javascript"}
    %script{:src=>"/codem/mode/javascript/javascript.js", :type=>"text/javascript"}
    %script{:src=>"/codem/mode/clojure/clojure.js", :type=>"text/javascript"}
    %script{:src=>"/codem/mode/clike/clike.js", :type=>"text/javascript"}
    %script{:src=>"/lib/jquery-1.7.1.min.js", :type=>"text/javascript"}
    %script{:src=>"/lib/jquery.stream-1.2.min.js", :type=>"text/javascript"}
    %script{:src=>"/lib/jquery.cookie.js", :type=>"text/javascript"}
  :javascript
    file_name = "#{file_name}"
    file_path = "#{file_path}"
    workspace_name = "#{workspace_name}"
    chat_link = "#{chat_link}"

  %body
    %ul
      %li{:class => :nav}
        %a{:href => home_link} Codeoperation
        >
      %li{:class => :nav}
        %a{:href => workspace_link} #{workspace_name}
        >
      - files.each do |name,link|
        %li{:class => :nav}
          %a{:href => link, :class => if name == file_name then :"navlink-chosen" else :navlink end}= name

    %div#chat
      %div#chatstream
      %div#chatinput
        Name:
        %input#chatname{:onchange => "setName()"}
        %br/
        %textarea#chattext{:rows => "6", :cols => "25", :onkeypress => "onEnter(event, sendChat)"}
    %textarea#code{:cols => "100"} TODO
    %script{:src=>"/editor.js", :type=>"text/javascript"}
